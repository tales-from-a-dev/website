{%- props align = 'left' -%}

{%- set style = html_cva(
    base: 'px-2 py-8 text-muted-foreground align-middle font-medium uppercase whitespace-nowrap',
    variants: {
        align: {
            left: 'text-left',
            center: 'text-center',
            right: 'text-right',
        },
    },
) -%}

{#- Template -#}

<th
    data-slot="table-head"
    scope="col"
    class="{{ style.apply({align: align}, attributes.render('class'))|tailwind_merge }}"
    {{ attributes }}
>
    {%- block content %}{% endblock -%}
</th>
