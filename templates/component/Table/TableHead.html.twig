{%- props align = 'left' -%}

{%- set style = html_cva(
    base: 'py-3.5 px-4 text-foreground text-left align-middle font-medium whitespace-nowrap [&:has([role=checkbox])]:pr-0',
    variants: {
        align: {
            left: 'text-left',
            center: 'text-center',
            right: 'text-right',
        },
    },
) -%}

{#- Template -#}

<th
    data-slot="table-head"
    scope="col"
    class="{{ style.apply({align: align}, attributes.render('class'))|tailwind_merge }}"
    {{ attributes }}
>
    {%- block content %}{% endblock -%}
</th>
