{%- set classes = html_classes(
    'hover:bg-muted/50 data-[state=selected]:bg-muted border-b transition-colors relative',
    attributes.render('class')|default(''),
) -%}

{#- Template -#}

<tr
    data-slot="table-row"
    class="{{ classes|tailwind_merge }}"
    {{ attributes }}
>
    {%- block content %}{% endblock -%}
</tr>
