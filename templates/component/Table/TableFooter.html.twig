{%- set classes = html_classes(
    'bg-muted/50 border-t font-medium [&>tr]:last:border-b-0',
    attributes.render('class')|default(''),
) -%}

{#- Template -#}

<tfoot
    data-slot="table-footer"
    class="{{ classes|tailwind_merge }}"
    {{ attributes }}
>
    {%- block content %}{% endblock -%}
</tfoot>
