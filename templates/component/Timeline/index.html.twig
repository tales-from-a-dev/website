{%- set classes = html_classes(
    'group/timeline relative flex flex-col gap-12 py-6 ml-6 lg:ml-0',
    'after:absolute after:left-0 after:top-0 after:-z-1 after:h-full after:w-px after:border-l after:border-dashed lg:after:left-[calc((1/3*100%)-(--spacing(12)))]',
    attributes.render('class')|default(''),
) -%}

{#- Template -#}

<div
    data-slot="timeline"
    class="{{ classes|tailwind_merge }}"
    {{ attributes }}
>
    {%- block content %}{% endblock -%}
</div>
