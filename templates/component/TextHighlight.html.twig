{%- props variant = 'yellow' -%}

{%- set ctx = html_cva(
    base: 'relative inline-block font-semibold z-10 before:absolute before:-z-10 before:-inset-1 before:-skew-y-3',
    variants: {
        variant: {
            yellow: 'before:bg-[#eab308] text-white',
            purple: 'before:bg-[#4f5b93] text-white',
            black: 'before:bg-black text-white',
            red: 'before:bg-red-400 text-white',
        },
    },
) -%}

{#- Template -#}

<mark
    data-slot="text-highlight"
    class="{{ ctx.apply({variant: variant}, attributes.render('class'))|tailwind_merge }}"
    {{ attributes }}
>
    {%- block content -%}{%- endblock -%}
</mark>
