{#- Template -#}

<div
    data-slot="login-form"
    {{ attributes }}
>
    {{ form_start(form) }}
        <twig:Card variant="outline" size="lg">
            <twig:Card:CardHeader>
                <twig:Card:CardTitle class="text-xl">
                    {{ 'dashboard.user.login.title.page'|trans }}
                </twig:Card:CardTitle>
            </twig:Card:CardHeader>
            <twig:Card:CardContent class="grid gap-4">
                {%- if last_error -%}
                    <twig:Alert variant="error">
                        <twig:Ux:Icon name="lucide:circle-alert" />
                        <twig:Alert:AlertTitle>
                            {{ last_error.messageKey|trans(last_error.messageData, 'security') }}
                        </twig:Alert:AlertTitle>
                    </twig:Alert>
                {%- endif -%}
                {{ form_rest(form) }}
            </twig:Card:CardContent>
            <twig:Card:CardFooter>
                <twig:Button
                    size="lg"
                    name="submit"
                    type="submit"
                    class="w-full"
                >
                    {{ 'btn.login'|trans(domain: 'forms') }}
                </twig:Button>
            </twig:Card:CardFooter>
        </twig:Card>
    {{ form_end(form) }}
</div>
