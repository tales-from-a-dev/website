{% extends 'app/base.html.twig' %}

{% block meta_title %}
    {{ 'settings.title'|trans }} | {{ parent() }}
{% endblock %}

{% block body %}
    <div class="w-full max-w-sm mx-auto flex justify-center py-4 md:py-6">
        {{ form_start(form) }}
            <twig:Card variant="outline" size="lg" class="w-full max-w-md">
                <twig:Card:CardHeader>
                    <twig:Card:CardTitle class="text-xl">
                        {{ 'settings.title'|trans }}
                    </twig:Card:CardTitle>
                    <twig:Card:CardAction>
                        <a
                            class="text-gray-300 hover:text-gray-400"
                            href="{{ logout_path() }}"
                            title="{{ 'logout.title'|trans }}"
                            data-turbo="false"
                        >
                            <twig:Ux:Icon name="lucide:log-out" class="size-5"/>
                        </a>
                    </twig:Card:CardAction>
                </twig:Card:CardHeader>
                <twig:Card:CardContent class="grid gap-4">
                    {% for alert in app.flashes('alert') %}
                        <twig:Alert :variant="alert.status.value">
                            <twig:Ux:Icon :name="alert.status.icon" />
                            <twig:Alert:AlertTitle>
                                {{ alert.message|trans(domain: 'alert') }}
                            </twig:Alert:AlertTitle>
                        </twig:Alert>
                    {% endfor %}
                    {{ form_rest(form) }}
                </twig:Card:CardContent>
                <twig:Card:CardFooter>
                    <twig:Button name="submit" type="submit" class="w-full">
                        {{ 'button.save'|trans(domain: 'form') }}
                    </twig:Button>
                </twig:Card:CardFooter>
            </twig:Card>
        {{ form_end(form) }}
    </div>
{% endblock %}

{% block footer %}{% endblock %}
