{% trans_default_domain 'admin' %}

{{ form_start(form) }}
    <div class="grid grid-cols-2 gap-4 pb-5 mb-5 border-b border-gray-700">
        {{ form_row(form.publicationStatus) }}
        {{ form_row(form.publishedAt) }}
    </div>

    {{ form_widget(form) }}

    <div class="pt-5 mt-5 space-y-2 border-t border-gray-700">
        <button type="submit" name="submit"
                class="{{ button_css|default('inline-flex text-white bg-teal-600 font-medium rounded-lg text-sm px-5 py-2.5 text-center bg-teal-600 hover:bg-teal-700 focus:ring-4 focus:outline-none focus:ring-teal-800') }}">
            <svg class="mr-1 -ml-1 w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd"
                      d="M10 5a1 1 0 011 1v3h3a1 1 0 110 2h-3v3a1 1 0 11-2 0v-3H6a1 1 0 110-2h3V6a1 1 0 011-1z"
                      clip-rule="evenodd"></path>
            </svg>
            {{ button_label|default('btn.save'|trans({}, 'form')) }}
        </button>
    </div>
{{ form_end(form) }}
