{% extends 'admin/admin_base.html.twig' %}

{% block meta_title %}
    {{ 'login.title'|trans }} | {{ parent() }}
{% endblock %}

{% block body %}
    <section class="m-auto">
        <div class="flex flex-col items-center justify-center w-[400px] px-6 py-8 mx-auto md:h-screen lg:py-0">
            <div class="w-full bg-gray-800 rounded-lg shadow border border-gray-700 md:mt-0 sm:max-w-md xl:p-0">
                <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                    <h1 class="text-xl font-bold leading-tight tracking-tight text-white md:text-2xl">
                        {{ 'login.title'|trans }}
                    </h1>
                    {% if last_error %}
                        <div class="flex p-4 mb-4 text-sm text-red-400 border border-red-800 rounded-lg bg-gray-80"
                             role="alert">
                            <svg aria-hidden="true" class="flex-shrink-0 inline w-5 h-5 mr-3" fill="currentColor"
                                 viewBox="0 0 20 20"
                                 xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd"
                                      d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"
                                      clip-rule="evenodd"></path>
                            </svg>
                            <p>{{ last_error.messageKey|trans(last_error.messageData, 'security') }}</p>
                        </div>
                    {% endif %}
                    <form id="login" class="space-y-4 md:space-y-6" action="{{ path('app_admin_login') }}"
                          method="post">
                        <div>
                            <label for="email" class="block mb-2 text-sm font-medium text-white">
                                {{- 'label.email'|trans(domain='form') -}}
                            </label>
                            <input type="email" name="_email" id="email" value="{{ last_username }}"
                                   class="bg-gray-700 border border-gray-600 text-white sm:text-sm rounded-lg block w-full p-2.5 placeholder-gray-400 focus:ring-teal-500 focus:border-teal-500"
                                   placeholder="user@example.com" required>
                        </div>
                        <div>
                            <label for="password" class="block mb-2 text-sm font-medium text-white">
                                {{- 'label.password'|trans(domain='form') -}}
                            </label>
                            <input type="password" name="_password" id="password"
                                   class="bg-gray-700 border border-gray-600 text-white sm:text-sm rounded-lg block w-full p-2.5 placeholder-gray-400 focus:ring-teal-600 focus:border-teal-600"
                                   placeholder="••••••••" required>
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="pt-5 mt-5 space-y-2 border-t border-gray-700">
                            <button type="submit"
                                    class="w-full text-white bg-teal-600 font-medium rounded-lg text-sm px-5 py-2.5 text-center bg-teal-600 hover:bg-teal-700 focus:ring-2 focus:outline-none focus:ring-teal-800">
                                {{- 'btn.login'|trans(domain='form') -}}
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
